<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".ui.NormalFaceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/setting_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/faces_settingicon">
        </ImageView>

        <RelativeLayout
            android:id="@+id/face_zone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/left_eye"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/normalface_left_eye">
            </ImageView>

            <ImageView
                android:id="@+id/right_eye"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="80dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/left_eye"
                android:src="@drawable/normalface_right_eye">
            </ImageView>

        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>